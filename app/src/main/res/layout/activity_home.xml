<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313"> <!-- Dark navy blue -->

    <!-- Welcome message -->

    <!-- Drive Button with Text -->
    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="TODO"
        android:src="@drawable/ic_logout" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:text="Welcome User!"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Drive Safe"
        android:textColor="#ffffff"
        android:textSize="18sp" /> <!-- Optional size adjustment -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/driveButton"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:background="@android:color/transparent"
            android:contentDescription="Drive"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/drive_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/linearLayout"

        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- Left part with historyButton and its label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/historyButton"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:background="@android:color/transparent"
                android:contentDescription="History"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/history_button" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="History"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Right part with performanceButton and its label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/performanceButton"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:background="@android:color/transparent"
                android:contentDescription="Performance"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/performance_button" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Performance"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- LinearLayout to contain two equal parts, each with a button and a label below it -->
    <LinearLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonContainer"
        android:layout_marginTop="25dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

    <!-- Left part with recordButton and its label -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:background="@android:color/transparent"
            android:contentDescription="Record"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/record_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Record"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Right part with profileButton and its label -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:background="@android:color/transparent"
            android:contentDescription="Profile"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profile_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>



    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="137dp"
        android:text="Button" />
</RelativeLayout>
